<!-- Place details page -->

<h1><%= @place["name"] %></h1>

<% for entry in @entries %>
  <h3><%= entry["title"] %> | <%= entry["occurred_on"] %></h3>
  <ul>
    <li><p><%= entry["description"] %></p></li>
  </ul>  
<% end %>

<p>
  <a href="/entries/new?place_id=<%= @place["id"] %>">New entry</a>
</p>

<p>
  <a href="/places">Back to All Places</a>
</p>